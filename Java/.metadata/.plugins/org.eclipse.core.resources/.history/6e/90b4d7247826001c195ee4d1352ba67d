package vecteur;

import java.util.Scanner;

public class ZeroALaFin {

	public static void main(String[] args) {
		//Ecrire un programme qui demande 10 fois à l’utilisateur d’entrer un chiffre compris entre 0 et 5. 
		//Vérifiez que le chiffre est bien compris entre 0 et 5. Créez et initialisez un tableau de 10 éléments 
		//avec les chiffres que l’utilisateur a entrés. Ensuite triez le tableau en mettant tous les zéros à la fin du 
		//tableau.
		
		int []tab=new int[10];
		int nb=0,cpt=0;
		boolean ok=false;
		
		System.out.println("Etrez un chiffre en 0 et 5");
		
		for (int i=0;i<10;i++){
			nb=(new Scanner(System.in)).nextInt();
			if (nb>=0 || nb<=5){
				tab[i]=nb;
			}
			else {
				System.out.println("Entre 0 et 5 !");
				nb=(new Scanner(System.in)).nextInt();
			}
		}
		
	}

}
