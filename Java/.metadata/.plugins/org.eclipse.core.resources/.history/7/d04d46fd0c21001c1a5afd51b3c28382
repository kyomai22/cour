package boucles;

import java.util.Scanner;

public class Sapin {

	public static void main(String[] args) {
		char esp= ' ';
		char etl= '*';
		int chx=0,rst=0,div=0;
		
		do{
			System.out.println("Entrez la taille de votre sapin :");
				chx=(new Scanner(System.in)).nextInt();
			if ((chx<=0) || (chx%2==0)){
				System.out.println("Entrez un nombre impair");
			}
		}	while ((chx<=0) || (chx%2==0));
		
		rst=(chx-1)%2;
		
		while (chx>0) {
			while (rst>0){
				System.out.println(etl);
			}
		}
		
		
		

	}

}
