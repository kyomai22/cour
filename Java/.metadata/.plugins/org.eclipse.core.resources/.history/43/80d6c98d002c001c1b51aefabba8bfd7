package schtroumpfs;

public class Village {

	public static void main(String[] args) {
		Schtroumpfs basique=new Schtroumpfs();
		GrandSchtroumpfs grand=new GrandSchtroumpfs("Grand Schtroumpfs");
		Schtroumpfette fille=new Schtroumpfette();
		SchtroumpfPeureux peureux=new SchtroumpfPeureux();
		SchtroumpfsNoir noir=new SchtroumpfsNoir();
		
		System.out.println(basique.getNom());
		basique.dessine();
		basique.parle();
		
		grand.getNom();
		grand.dessine();
		grand.chef();
		grand.parle();
		
		fille.getNom();
		fille.dessine();
		fille.shopping();
		fille.parle();
		
		peureux.getNom();
		peureux.dessine();
		peureux.peur();
		peureux.parle();
		
		noir.getNom();
		noir.dessine();
		noir.mord();
		noir.parle();

	}

}
