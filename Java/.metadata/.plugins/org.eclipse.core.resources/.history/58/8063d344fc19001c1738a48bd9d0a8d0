package decouverte;

import java.util.Scanner;

public class Comparaison {

	public static void main(String[] args) {
		int nb1, nb2;
		
		System.out.println("Entrez la premiere valeure a comparé");
		nb1=(new Scanner(System.in)).nextInt();
		
		System.out.println("Entrez la deuxieme valeure a comparé");
		nb2=(new Scanner(System.in)).nextInt();
		
		if (nb1==nb2){
			System.out.println(nb1+" et "+nb2+" sont égaux.");
		}
		else {
			if (nb1>nb2){
				System.out.println(nb1+" est plus grand que "+nb2);
			}
		}

	}

}
