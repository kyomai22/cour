package boucles;

import java.util.Scanner;

public class Division {

	public static void main(String[] args) {
		// Écrire le programme qui effectue la division entière de deux nombres entiers sans utiliser 
		//l’instruction l’opérateur de division / . 
		
		int nb1=0, nb2=0, cpt=0, div=0;
		
		System.out.println("__"+" divisé par "+"__");
		nb1=(new Scanner(System.in)).nextInt();
		nb2=(new Scanner(System.in)).nextInt();
		
		if (nb2!=0){
			System.out.println("Division par zero impossile");
		
		
		while ((div<=nb1)&&(nb2!=0)) {
			div=nb2;
			div=div+nb2;
			cpt++;
		}
		System.out.println("Le résultat est "+cpt);
		}
	}

}
